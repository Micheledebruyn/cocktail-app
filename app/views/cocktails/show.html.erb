<div class="banner">

  <div class="container">
  <div class="row">
    <div class="col-xs-12">
      

    <%= cl_image_tag @cocktail.photo, height: 300, width: 400 %>
    <h2><%= @cocktail.name %></h2>
    <table>
      <tr>
        <th>Dose</th>
        <th>Ingredient</th>
        <th>Delete</th>
      </tr>
      <tr>
        <% @cocktail.doses.each do |dose| %>
        <td> <%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
        <td><%= link_to "Delete", dose_path(dose), method: :delete, class:"btn btn-danger"%></td>
      </tr>
    </table>

    <% end %>

  </table>

  <hr>

  <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail), class:"btn btn-danger" %>
  <%= link_to 'All cocktails', cocktails_path, class:"btn btn-danger" %>

    </div>
  </div>
</div>
</div>